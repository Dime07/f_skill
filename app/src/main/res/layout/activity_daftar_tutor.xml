<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daftar_tutor">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/ungu"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"

        />
    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="450dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="-2dp"
            android:layout_marginBottom="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bg2" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:background="@drawable/isi_style"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Full name" />

        <EditText
            android:id="@+id/email"
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:layout_below="@+id/fullname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/isi_style"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Email" />

        <EditText
            android:id="@+id/Jurusan"
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/isi_style"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Jenjang jurusan" />

        <EditText
            android:id="@+id/univ"
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:layout_below="@+id/Jurusan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/isi_style"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Universitas" />

        <EditText
            android:id="@+id/password"
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:layout_below="@+id/univ"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:background="@drawable/isi_style"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/confirm"
            android:layout_width="242dp"
            android:layout_height="35dp"
            android:layout_below="@+id/password"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:background="@drawable/isi_style"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tutor"
            android:layout_width="170dp"
            android:layout_height="92dp"
            android:layout_marginStart="128dp"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="481dp"
            android:layout_centerHorizontal="true"
            android:text="Tutor"
            android:textColor="@color/putih"
            android:textSize="68dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_daftar2"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/confirm"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonstyle"
            android:text="Daftar"
            android:textColor="@color/putih" />


    </RelativeLayout>

</RelativeLayout>