<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pilihkbk">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/ungu"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"

        />
    <RelativeLayout
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="450dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/bg2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="309dp"
            android:layout_height="404dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            app:srcCompat="@drawable/kotakpth" />

        <TextView
            android:id="@+id/tutor2"
            android:layout_width="170dp"
            android:layout_height="92dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="481dp"
            android:text="Tutor"
            android:textColor="@color/putih"
            android:textSize="68sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pilih_kbk"
            android:layout_marginTop="100dp"
            android:layout_width="151dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:textSize="37sp"
            android:textColor="@color/putih"
            android:text="Pilih KBK" />

        <RadioGroup
            android:layout_width="165dp"
            android:layout_height="90dp"
            android:layout_marginTop="185dp"
            android:layout_centerHorizontal="true"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karya Tulis Ilmiah"
                android:textSize="11sp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PKM"
                android:textSize="11sp"
                />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paper"
                android:textSize="11sp"
                />


        </RadioGroup>

        <TextView
            android:id="@+id/Bahasa_inggris"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginEnd="121dp"
            android:layout_marginRight="121dp"
            android:layout_marginBottom="149dp"
            android:text="Bahasa Inggris"
            android:textColor="@color/hitam"
            android:textSize="15sp" />

        <RadioGroup
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="405dp"
            android:layout_centerHorizontal="true"
            >

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MUN"
            android:textSize="11sp" />

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debat Bahasa Inggris"
            android:textSize="11sp" />

        </RadioGroup>


        <TextView
            android:id="@+id/Kewirausahaan"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginEnd="144dp"
            android:layout_marginRight="144dp"
            android:layout_marginBottom="259dp"
            android:text="Kewirausahaan"
            android:textColor="@color/hitam"
            android:textSize="15sp" />

        <RadioGroup
            android:layout_width="165dp"
            android:layout_height="90dp"
            android:layout_marginTop="295dp"
            android:layout_centerHorizontal="true"
            >

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PMW"
            android:textSize="11sp"
            />

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KBMI"
            android:textSize="11sp"
            />

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BPC"
            android:textSize="11sp"
            />

        </RadioGroup>

        <TextView
            android:id="@+id/Sosial"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginStart="53dp"
            android:layout_marginLeft="53dp"
            android:layout_marginEnd="145dp"
            android:layout_marginRight="145dp"
            android:layout_marginBottom="64dp"
            android:text="Sosial"
            android:textColor="@color/hitam"
            android:textSize="15sp" />

        <RadioButton
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="490dp"
            android:text="PBHD"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/Riset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageView4"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignEnd="@+id/imageView4"
            android:layout_alignRight="@+id/imageView4"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_marginStart="54dp"
            android:layout_marginLeft="54dp"
            android:layout_marginEnd="196dp"
            android:layout_marginRight="196dp"
            android:layout_marginBottom="369dp"
            android:text="Riset"
            android:textColor="@color/hitam"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_daftar2"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/confirm"
            android:layout_marginTop="540dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonstyle"
            android:text="Selanjutnya"
            android:textColor="@color/putih" />


    </RelativeLayout>




</RelativeLayout>